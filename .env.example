# V4L (Vocal 4 Local) - Environment Configuration
# Copy this file to .env and configure your settings

# Application
APP_NAME="V4L - Vocal 4 Local"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

# Database (PostgreSQL/MySQL for production, SQLite for dev)
DB_CONNECTION=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=database/v4l.sqlite
DB_USERNAME=
DB_PASSWORD=

# Session
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Security
CSRF_TOKEN_NAME=csrf_token
ENCRYPTION_KEY=

# WebSocket
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8080

# Logging
LOG_LEVEL=debug
LOG_PATH=logs/app.log

# Cache
CACHE_DRIVER=file
CACHE_PATH=cache/

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Geocoding (for postal addresses)
GEOCODING_PROVIDER=google
GOOGLE_MAPS_API_KEY=
GEOCODING_AUTO_FILL=false
