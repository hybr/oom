{
    "name": "v4l/vocal-4-local",
    "description": "V4L (Vocal 4 Local) - Your Community, Your Marketplace",
    "version": "1.0.0",
    "type": "project",
    "keywords": ["marketplace", "community", "local", "php", "bootstrap"],
    "homepage": "https://v4l.app",
    "license": "MIT",
    "authors": [
        {
            "name": "V4L Team",
            "email": "team@v4l.app"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "V4L\\": "lib/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "init-meta": "php database/init-meta-db.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
